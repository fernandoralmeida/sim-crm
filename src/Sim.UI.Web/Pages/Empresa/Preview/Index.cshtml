@page "/empresa/detalhes/"
@model Sim.UI.Web.Pages.Empresa.Preview.IndexModel
@using Sim.UI.Web.Areas.Admin.Pages

@{
    Layout = "/Pages/Shared/__LayoutModal.cshtml";
    ViewData["Title"] = "Empresas";
}

<table>
    <thead>
        <tr>
            <th scope="col">CNPJ</th>
            <th scope="col">Razão Social</th>
            <th scope="col">Situação Cadastral</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Html.DisplayFor(modelitem => Model.Input!.CNPJ)</td>
            <td>@Html.DisplayFor(modelitem => Model.Input!.Nome_Empresarial)</td>
            <td>@Html.DisplayFor(modelitem => Model.Input!.Situacao_Cadastral)</td>
        </tr>
    </tbody>
</table>

<table>
    <thead>
        <tr>
            <th scope="col">Nome Fantasia</th>
            <th scope="col">Abertura</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Html.DisplayFor(modelitem => Model.Input!.Nome_Fantasia)</td>
            <td>@Html.DisplayFor(modelitem => Model.Input!.Data_Abertura)</td>
        </tr>
    </tbody>
</table>

<table>
    <thead>
        <tr>
            <th scope="col">CNAE</th>
            <th scope="col">Descrição</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Html.DisplayFor(modelitem => Model.Input!.CNAE_Principal)</td>
            <td>@Html.DisplayFor(modelitem => Model.Input!.Atividade_Principal)</td>
        </tr>
    </tbody>
</table>

<table>
    <thead>
        <tr>
            <th scope="col">CNAE Secundários</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Html.DisplayFor(modelitem => Model.Input!.Atividade_Secundarias)</td>
        </tr>
    </tbody>
</table>

<table>
    <thead>
        <tr>
            <th scope="col">CEP</th>
            <th scope="col">Endereço</th>
            <th scope="col">Bairro</th>
            <th scope="col">Municipio</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Html.DisplayFor(modelitem => Model.Input!.CEP)</td>
            <td>
                @Html.DisplayFor(modelitem => Model.Input!.Logradouro)
                @Html.DisplayFor(modelitem => Model.Input!.Numero)

            </td>
            <td>@Html.DisplayFor(modelitem => Model.Input!.Bairro)
            </td>
            <td>@Html.DisplayFor(modelitem => Model.Input!.Municipio)
                @Html.DisplayFor(modelitem => Model.Input!.UF)</td>
        </tr>
    </tbody>
</table>

<table>
    <thead>
        <tr>
            <th scope="col">Contato</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>
                @Html.DisplayFor(modelitem => Model.Input!.Email)
                @Html.DisplayFor(modelitem => Model.Input!.Telefone)
            </td>
        </tr>
    </tbody>
</table>
